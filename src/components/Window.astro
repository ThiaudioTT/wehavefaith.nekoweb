---
const { title } = Astro.props;
---

<div class="window">
  <div class="title-bar">
    <span class="title-text">{title}</span>
    <div class="window-controls">
      <button class="control-btn minimize" aria-label="Minimize">_</button>
      <button class="control-btn maximize" aria-label="Maximize">□</button>
      <button class="control-btn close" aria-label="Close">×</button>
    </div>
  </div>
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .window {
    background: var(--secondary);
    border: 2px solid;
    border-color: 
      color-mix(in srgb, var(--secondary) 100%, white 40%)
      color-mix(in srgb, var(--secondary) 100%, black 40%)
      color-mix(in srgb, var(--secondary) 100%, black 40%)
      color-mix(in srgb, var(--secondary) 100%, white 40%);
    box-shadow: 
      inset 1px 1px 0 color-mix(in srgb, var(--secondary) 100%, white 20%),
      inset -1px -1px 0 color-mix(in srgb, var(--secondary) 100%, black 60%);
    overflow: hidden;
    font-family: "Tahoma", "MS Sans Serif", "Segoe UI", Arial, sans-serif;
  }

  .title-bar {
    background: linear-gradient(90deg, var(--primary), color-mix(in srgb, var(--primary) 70%, black));
    padding: 3px 4px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 4px;
  }

  .title-text {
    font-weight: bold;
    font-size: 0.875rem;
    color: var(--secondary);
    padding-left: 2px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .window-controls {
    display: flex;
    gap: 2px;
  }

  .control-btn {
    width: 16px;
    height: 14px;
    font-size: 10px;
    font-weight: bold;
    line-height: 1;
    padding: 0;
    background: color-mix(in srgb, var(--secondary) 85%, var(--primary));
    border: 2px solid;
    border-color: 
      color-mix(in srgb, var(--secondary) 100%, white 40%)
      color-mix(in srgb, var(--secondary) 100%, black 50%)
      color-mix(in srgb, var(--secondary) 100%, black 50%)
      color-mix(in srgb, var(--secondary) 100%, white 40%);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--background);
  }

  .control-btn:active {
    border-color: 
      color-mix(in srgb, var(--secondary) 100%, black 50%)
      color-mix(in srgb, var(--secondary) 100%, white 40%)
      color-mix(in srgb, var(--secondary) 100%, white 40%)
      color-mix(in srgb, var(--secondary) 100%, black 50%);
  }

  .content {
    padding: 1rem;
    font-size: 1rem;
    line-height: 1.5;
    color: var(--background);
    border-top: 2px solid;
    border-color: color-mix(in srgb, var(--secondary) 100%, black 30%) transparent transparent color-mix(in srgb, var(--secondary) 100%, black 30%);
  }
</style>
