---
const { title } = Astro.props;
import { themeCSS } from "../styles/theme.css.ts";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <style is:global set:html={themeCSS}></style>
  </head>

  <body>
    <div class="main-frame">
      <div class="scanlines"></div>
      <div class="main-container">
        <slot />
      </div>
    </div>
  </body>

  <style>
    body {
      margin: 0;
      background: var(--background);
      color: var(--text);
      font-family: "Share Tech Mono", monospace;
      position: relative;
      overflow-x: hidden;
    }

    .scanlines {
      pointer-events: none;
      position: fixed;
      inset: 0;
      background: repeating-linear-gradient(
        to bottom,
        rgba(255, 255, 255, 0.03) 0px,
        rgba(255, 255, 255, 0.03) 2px,
        transparent 3px,
        transparent 4px
      );
      mix-blend-mode: overlay;
      z-index: 50;
    }

    .main-frame {
      min-height: 100vh;
      padding: 2.5rem;
      display: flex;
      align-items: stretch;
      justify-content: center;
      box-sizing: border-box;
      background: var(--background);
    }

    .main-container {
      width: 45%;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      background: var(--background);
      box-sizing: border-box;
    }

    @media (max-width: 768px) {
      .main-frame {
        padding: 1.5rem;
      }

      .main-container {
        padding: 1.5rem;
        border-width: 3px;
      }
    }
  </style>
</html>
