---
const { title } = Astro.props;
---

<div class="window">
  <div class="title-bar">{title}</div>
  <div class="content">
    <slot />
  </div>
</div>

<style>
  .window {
    background: var(--secondary);
    border: 3px solid var(--primary);
    border-radius: 8px;
    box-shadow:
      0 0 20px color-mix(in srgb, var(--primary) 60%, transparent),
      0 0 4px color-mix(in srgb, var(--accent) 45%, transparent);
    overflow: hidden;
    backdrop-filter: blur(4px);
  }

  .title-bar {
    background: var(--primary);
    border-bottom: 2px solid var(--primary);
    padding: 0.6rem 1rem;
    font-weight: bold;
    color: var(--secondary);
    text-shadow: 0 0 10px color-mix(in srgb, var(--primary) 65%, transparent);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .content {
    padding: 1.2rem;
    font-size: 1rem;
    line-height: 1.5rem;
    color: var(--background);
  }
</style>
